<?php
/**
 * @var \Zend\View\Renderer\PhpRenderer $this
 * @var string $style
 * @var string $class
 * @var array $config
 *
 * @link https://github.com/DDMAL/diva.js/wiki/Settings
 */

$divaId = json_encode( '#' . $config['id'], 320);
$configJson = json_encode($config['config'], 320);
$script = <<<JS
$(document).ready(function() {
    $($divaId).diva(
        $configJson
    ).data('diva');
});
JS;
$this->headScript()->appendScript($script);
?>

<div id="<?= $config['id'] ?>" style="<?= $style ?>" class="<?= $class ?>" allowfullscreen="allowfullscreen"></div>
